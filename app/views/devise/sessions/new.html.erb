<div class="row d-flex align-items-center justify-content-center height-100vh">
  <div class="col-4 backgroundcolor-sunglow p-5">
    <h2 class="">Se connecter</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs mt-4">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label: 'Mot de passe',
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "button-small-indigodye mt-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


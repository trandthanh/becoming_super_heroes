<div class="dashboard-admin d-flex">
  <div class="dashboard-navbar col-sm-2 height-calc100vhneg63px backgroundcolor-japaneseindigo color-white p-4">
    <h6>Dashboard</h6>
  </div>

  <div class="dashboard-content col-sm-10 p-4 backgroundcolor-isabelline">
    <div class="dashboard-content-stats" style="border: 2px solid red">
      <h1>TBD</h1>
    </div>

    <div class="row p-3">
      <div class="col-sm-8 dashboard-content-wishes p-4 backgroundcolor-white">
        <h5 class="mb-3">WISHES RECENTS</h5>
        <% @recent_wishes.each do |wish| %>
          <%= link_to admin_wish_path(wish), class: "clean-link" do %>
            <div class="dashboard-content-wishes-card p-4">
              <div class="d-flex">
                <%= image_tag "placeholder_avatar.png", class: 'avatar' %>
                <div class="ml-2">
                  <p class="mb-0 fontweight-500"><%= wish.user.first_name %> <%= wish.user.last_name %> / <%= wish.user.email %></p>
                  <p class="fontweight-300 fontsize-13px mb-0 color-gray"><%= wish.created_at %></p>
                </div>
              </div>
              <div class="mt-3 color-gray">
                <p class="mb-0 fontweight-500">Tête</p>
                <% wish.tracks.each_with_index do |track, index| %>
                  <% if track.subject.category == "Tête" %>
                    <%= index + 1 %> / <%= track.subject.name %>
                  <% end %>
                <% end %>
                <p class="mt-3 mb-0 fontweight-500">Corps</p>
                <% wish.tracks.each_with_index do |track, index| %>
                  <% if track.subject.category == "Corps" %>
                    <%= index + 1 %> / <%= track.subject.name %>
                  <% end %>
                <% end %>
              </div>
              <div class="d-flex mt-3">
                <% if wish.status == "Nouveau" %>
                  <div class="p-2 fontsize-13px border-1px-solid-gray backgroundcolor-grey">
                    <p class="m-0">Nouveau</p>
                  </div>
                <% else %>
                  <!-- a enlever -->
                  <div class="p-2 fontsize-13px border-1px-solid-gray backgroundcolor-grey">
                    <p class="m-0">Nouveau</p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="col-sm-4" style="border: 2px solid green;"></div>
    </div>
  </div>
</div>

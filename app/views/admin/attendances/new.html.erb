<div class="dashboard-admin d-flex">
  <%= render 'admin/shared/sidenav' %>

  <div class="dashboard-content col-sm-10 p-4 backgroundcolor-isabelline">
    <h1>Cours & Classes / Classe Ouverte</h1>
    <div class="dashboard-admin-courses-index-active-classes mt-5 px-3 pt-3 backgroundcolor-white">
      <div class="d-flex justify-content-between ">
        <h5 class="mb-3">CLASSE/ <%= @course.subject.name.upcase %></h5>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Catégorie</th>
              <th>Nom</th>
              <th>Location</th>
              <th>Capacité</th>
              <th>Calendrier</th>
              <th>Participants</th>
              <th>Places restantes</th>
            </tr>
          </thead>
          <tbody>

            <tr>
              <td><%= @course.subject.category %></td>
              <td><%= @course.subject.name %></td>
              <td><%= @course.location %></td>
              <td><%= @course.capacity %></td>
              <td><%= @course.schedule %></td>
              <td><%= @course.attendances.length %></td>
              <td><%= @course.capacity - @course.attendances.length %></td>
              </td>
            </tr>

          </tbody>
        </table>
      </div>
    </div>

    <% if @course.capacity > @course.attendances.count %>
      <div class="dashboard-admin-courses-index-active-classes mt-5 px-3 pt-3 backgroundcolor-white">
        <div class="panel">
          <h5>Rajouter un participant </h5>
        </div>
        <div class="container d-flex align-items-center justify-content-between">

            <div class="col-12 col-sm-8">

              <%= simple_form_for @attendance, url: admin_course_attendances_path, method: :post, class: "form-horizontal form-label-left" do |f|%>
                <div class="form-inline form-group">
                  <label class= "label_admin col-md-3 col-sm-3 col-xs-1 mr-5">Participants</label><div class= "col-md-6 col-sm-6 col-xs-12"><%= f.input :user, collection: User.order(:last_name), label_method: :last_name, prompt: "Choisissez un participant", label: false%></div>
                  </div>

              </div>


                  <%= f.submit "ENVOYER", class: "btn btn-sunglow mb-2 " %>
                 </div>
                <% end %>

              </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon justify-content-between height-79px" >
  <div class="navbar-left d-flex justify-content-between align-items-center <%= current_page?(dashboard_user_path) || current_page?(admin_root_path) ? '' : 'mt-3' %>">
    <%= link_to root_path, class: "navbar-brand marginleft-15px" do %>
      <%= image_tag "aktio-logo.png" %>
    <% end %>

    <!-- MOBILE -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% unless current_page?(dashboard_user_path) || current_page?(admin_root_path) %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto marginbottom-neg35px">
          <li class="nav-item">
            <%= link_to "Notre Histoire", notrehistoire_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Nos Actions", nosactions_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Nous Contacter", new_contact_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="navbar-right">
      <div class="top-menu d-flex justify-content-end">
        <% if current_page?(dashboard_user_path) || current_page?(admin_root_path) %>
          <button class= "navbar-btn-ceruleanblue-active d-flex justify-content-center align-items-center"><%= link_to "Mon tableau de bord", dashboard_user_path, class: "nav-link-button" %></button>
        <% else %>
          <button class= "navbar-btn-ceruleanblue d-flex justify-content-center align-items-center"><%= link_to "Mon tableau de bord", dashboard_user_path, class: "nav-link-button" %></button>
        <% end %>



        <% if current_user.avatar.attached? %>
          <div class="width-10pc d-flex align-items-center justify-content-center">
            <div class="nav-item dropdow padding-10px">
              <%= image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Profil", "#", class: "dropdown-item" %>
                <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="width-10pc d-flex align-items-center justify-content-center">
            <div class="nav-item dropdow padding-10px">
              <%= image_tag "avatar-placeholder.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Profil", "#", class: "dropdown-item" %>
                <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </div>
          </div>

        <% end %>


      </div>
    </div>
  <% else %>
    <% if current_page?(new_mentee_path) %>
      <div class="navbar-right">
        <div class="top-menu d-flex">
          <button class= "navbar-first-btn-active d-flex justify-content-center align-items-center"><%= link_to "Trouver un mentor", new_mentee_path, class: "nav-link-button-first" %></button>
          <button class= "navbar-second-btn d-flex justify-content-center align-items-center"><%= link_to "Organiser mon parcours", new_wish_path, class: "nav-link-button-second" %></button>
          <div class="width-10pc d-flex align-items-center justify-content-center">
            <%= link_to new_user_session_path do %>
              <i class="fas fa-user fontsize-20px color-gray hover-indigodye"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% elsif current_page?(new_wish_path) %>
      <div class="navbar-right">
        <div class="top-menu d-flex">
          <button class= "navbar-first-btn d-flex justify-content-center align-items-center"><%= link_to "Trouver un mentor", new_mentee_path, class: "nav-link-button-first" %></button>
          <button class= "navbar-second-btn-active d-flex justify-content-center align-items-center"><%= link_to "Organiser mon parcours", new_wish_path, class: "nav-link-button-second" %></button>
          <div class="width-10pc d-flex align-items-center justify-content-center">
            <%= link_to new_user_session_path do %>
              <i class="fas fa-user fontsize-20px color-gray hover-indigodye"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="navbar-right">
        <div class="top-menu d-flex">
          <button class= "navbar-first-btn d-flex justify-content-center align-items-center"><%= link_to "Trouver un mentor", new_mentee_path, class: "nav-link-button-first" %></button>
          <button class= "navbar-second-btn d-flex justify-content-center align-items-center"><%= link_to "Organiser mon parcours", new_wish_path, class: "nav-link-button-second" %></button>
          <div class="width-10pc d-flex align-items-center justify-content-center">
            <%= link_to new_user_session_path do %>
              <i class="fas fa-user fontsize-20px color-gray hover-indigodye"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


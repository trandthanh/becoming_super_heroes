<div class="navbar navbar-expand-sm navbar-light navbar-lewagon justify-content-between">
  <div class="navbar-left d-flex justify-content-between align-items-center">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.svg" %>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Notre Histoire", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Nos Actions", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Nous Contacter", "#", class: "nav-link" %>
        </li>
        <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete %>
      </ul>
    </div>
  </div>

  <% if !user_signed_in? %>
    <div class="navbar-right">
      <div class="top-menu d-flex">
         <button class= "navbar-first-btn d-flex justify-content-center align-items-center"><%= link_to "Trouver un mentor", "#", class: "nav-link-button-first" %></button>
         <button class= "navbar-second-btn d-flex justify-content-center align-items-center"><%= link_to "Organiser mon parcours", new_wish_path, class: "nav-link-button-second" %></button>
        <%= link_to new_user_session_path do %>
          <%= image_tag "sign_in.svg", class: "sign_in" %>
        <% end %>
        <%= link_to(destroy_user_session_path, method: :delete) do %>
          <p>Déconnexion</p>
        <% end %>
      </div>
    </div>
  <% elsif current_page?(new_wish_path) %>
    <div class="navbar-right">
      <div class="top-menu d-flex">
         <button class= "navbar-first-btn d-flex justify-content-center align-items-center"><%= link_to "Trouver un mentor", "#", class: "nav-link-button-first" %></button>
         <button class= "navbar-second-btn-active d-flex justify-content-center align-items-center"><%= link_to "Organiser mon parcours", new_wish_path, class: "nav-link-button-second" %></button>
         <%= link_to destroy_user_session_path, method: :delete do %>
          <%= image_tag "sign_in.svg", class: "sign_in" %>
        <% end %>
        <%= link_to(destroy_user_session_path, method: :delete) do %>
          <p>Déconnexion</p>
        <% end %>
      </div>
    </div>
  <% elsif current_page?(new_mentee_path) %>
    <div class="navbar-right">
      <div class="top-menu d-flex">
         <button class= "navbar-first-btn-active d-flex justify-content-center align-items-center"><%= link_to "Trouver un mentor", "#", class: "nav-link-button-first" %></button>
         <button class= "navbar-second-btn d-flex justify-content-center align-items-center"><%= link_to "Organiser mon parcours", new_wish_path, class: "nav-link-button-second" %></button>
         <%= link_to destroy_user_session_path, method: :delete do %>
          <%= image_tag "sign_in.svg", class: "sign_in" %>
        <% end %>
        <%= link_to(destroy_user_session_path, method: :delete) do %>
          <p>Déconnexion</p>
        <% end %>
      </div>
    </div>
  <% else %>
    <% if current_page?(admin_root_path) %>
      <%= link_to(destroy_user_session_path, method: :delete) do %>
        <p>Déconnexion</p>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
         <%= image_tag "sign_in.svg", class: "sign_in" %>
      <% end %>
      <%= link_to(destroy_user_session_path, method: :delete) do %>
        <p>Déconnexion</p>
      <% end %>
    <% end %>
  <% end %>
</div>




